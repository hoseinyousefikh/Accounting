@model AccountingMVC.Models.BankViewModel

@{
    ViewData["Title"] = "جزییات بانک کاربر";
}

<div class="container">
    <div class="glass-box">
        <h2 class="text-center">جزییات بانک</h2>

        @if (Model != null)
        {
            <div class="scroll-box">
                <table class="table table-hover text-white mb-0">
                    <thead>
                        <tr>
                            <th>نام بانک</th>
                            <th>شماره حساب</th>
                            <th>شماره کارت</th>
                            <th>شماره شبا</th>
                            <th>مبلغ</th>
                            <th>شعبه</th>
                            <th>توضیحات</th>
                            <th>وضعیت</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.AccountNumber</td>
                            <td>@Model.CardNumber</td>
                            <td>@Model.ShabaNumber</td>
                            <td>@string.Format("{0:N0}", Model.Amount)</td>
                            <td>@Model.Oranches</td>
                            <td class="scrollable-cell">@Model.Description</td>
                            <td>@(Model.IsPublic ? "عمومی" : "خصوصی")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-danger text-center">اطلاعات بانکی یافت نشد.</div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4 gap-3">
        <a asp-action="Index" asp-controller="Bank" class="btn btn-secondary px-4">بازگشت</a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #3b82f6, #1e40af);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-box {
        width: 80%;
        margin: 50px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        color: #fff;
    }

    h2 {
        text-align: center;
        color: #f0f8ff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .scroll-box {
        max-height: 300px;
        overflow-y: auto;
        border-radius: 10px;
    }

    table {
        width: 100%;
        margin-bottom: 0;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
        font-size: 0.9rem;
    }

    .scrollable-cell {
        max-width: 150px;
        overflow-x: auto;
        white-space: nowrap;
        direction: ltr;
    }

    .btn {
        margin: 2px;
    }
</style>
