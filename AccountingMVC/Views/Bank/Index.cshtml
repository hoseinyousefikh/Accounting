@model List<AccountingMVC.Models.BankViewModel>

@{
    ViewData["Title"] = "لیست بانک‌های من";
}

<div class="container">
    <div class="glass-box">
        <h2 class="text-center">بانک‌های ثبت‌شده شما</h2>

        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-hover text-white">
                <thead>
                    <tr>
                        <th>نام بانک</th>
                        <th>شماره کارت</th>
                        <th>وضعیت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bank in Model)
                    {
                        <tr>
                            <td>@bank.Name</td>
                            <td>@bank.CardNumber</td>
                            <td>@(bank.IsPublic ? "عمومی" : "خصوصی")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">هیچ بانکی برای نمایش وجود ندارد.</div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a asp-action="CreateBank" asp-controller="Bank" class="btn btn-success btn-lg rounded-circle shadow"
           style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; font-size: 30px;">
            +
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #3b82f6, #1e40af);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-box {
        width: 70%;
        margin: 50px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        color: #fff;
    }

    h2 {
        text-align: center;
        color: #f0f8ff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
    }

    th, td {
        text-align: center;
    }
</style>
