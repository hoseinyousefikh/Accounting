@model AccountingMVC.Models.CriticismViewModel

@{
    ViewData["Title"] = "افزودن نقد";
}

<div class="container">
    <div class="form-container">
        <h2 class="text-center">افزودن نقد</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Date">تاریخ:</label>
                <input type="date" class="form-control" id="Date" name="Date" required />
            </div>

            <div class="form-group">
                <label for="Time">زمان:</label>
                <input type="time" class="form-control" id="Time" name="Time" required />
            </div>

            <div class="form-group">
                <label for="Amount">مبلغ:</label>
                <input type="number" class="form-control" id="Amount" name="Amount" required />
            </div>

            <div class="form-group">
                <label for="CategoryCostId">دسته‌بندی:</label>
                <div class="d-flex align-items-center">
                    <input type="text" class="form-control" id="CategoryCostName" name="CategoryCostName" value="@Model.CategoryCostName" readonly />
                    <button type="button" class="btn btn-info btn-sm ml-2" id="CategoryCostButton"
                            data-toggle="modal"
                            data-target="#CategoryCostModal"
                            onclick="window.location.href='@Url.Action("GetCategories", "Criticism")'">
                        انتخاب
                    </button>
                </div>
            </div>

            <div class="form-group">
                <label for="SubcategoryCostId">زیر دسته:</label>
                <div class="d-flex align-items-center">
                    <input type="text" class="form-control" id="SubcategoryCostName" name="SubcategoryCostName" value="@Model.SubcategoryCostName" readonly />
                    <button type="button" class="btn btn-info btn-sm ml-2" id="SubcategoryCostButton"
                            data-toggle="modal"
                            data-target="#SubcategoryCostModal">
                        انتخاب
                    </button>
                </div>
            </div>

            <div class="form-group">
                <label for="FromAccountId">از حساب:</label>
                <select id="FromAccountId" name="FromAccountId" class="form-control" required>
                    <option value="">حساب را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Description">توضیحات:</label>
                <textarea class="form-control" id="Description" name="Description" required></textarea>
            </div>

            <div class="form-group">
                <label for="MemderId">عضو:</label>
                <select id="MemderId" name="MemderId" class="form-control" required>
                    <option value="">عضو را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="EventId">رویداد:</label>
                <select id="EventId" name="EventId" class="form-control" required>
                    <option value="">رویداد را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="ProjectId">پروژه:</label>
                <select id="ProjectId" name="ProjectId" class="form-control" required>
                    <option value="">پروژه را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">ثبت</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-container {
        width: 60%;
        margin: 0 auto;
        padding: 30px;
        background-color: #f4f7fa;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        background: rgba(255, 255, 255, 0.2);
    }

    h2 {
        color: #1E3A8A;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #6c757d;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        transition: border-color 0.3s ease;
        color: #1E3A8A;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #3f51b5;
        color: white;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .text-center {
        text-align: center;
    }

    .d-flex {
        display: flex;
        align-items: center;
    }

        .d-flex input {
            flex-grow: 1;
        }

    .ml-2 {
        margin-left: 10px;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
    }
</style>
