@model AccountingMVC.Models.CriticismViewModel

@{
    ViewData["Title"] = "افزودن نقد";
}

<div class="container">
    <div class="form-container">
        <h2 class="text-center">افزودن نقد</h2>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="Date">تاریخ:</label>
                <input type="date" class="form-control" id="Date" name="Date" required />
            </div>

            <div class="form-group">
                <label for="Time">زمان:</label>
                <input type="time" class="form-control" id="Time" name="Time" required />
            </div>

            <div class="form-group">
                <label for="Amount">مبلغ:</label>
                <input type="number" class="form-control" id="Amount" name="Amount" required />
            </div>

            <div class="form-group">
                <label for="CategoryCostId">دسته‌بندی:</label>
                <select id="CategoryCostId" name="CategoryCostId" class="form-control" required>
                    <option value="">دسته‌بندی را انتخاب کنید</option>
                    @foreach (var category in Model.CategoryCosts)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="SubcategoryCostId">زیر دسته:</label>
                <select id="SubcategoryCostId" name="SubcategoryCostId" class="form-control" required>
                    <option value="">زیر دسته را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="FromAccountId">از حساب:</label>
                <select id="FromAccountId" name="FromAccountId" class="form-control" required>
                    <option value="">حساب را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Description">توضیحات:</label>
                <textarea class="form-control" id="Description" name="Description" required></textarea>
            </div>

            <div class="form-group">
                <label for="MemderId">عضو:</label>
                <select id="MemderId" name="MemderId" class="form-control" required>
                    <option value="">عضو را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="EventId">رویداد:</label>
                <select id="EventId" name="EventId" class="form-control" required>
                    <option value="">رویداد را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-group">
                <label for="ProjectId">پروژه:</label>
                <select id="ProjectId" name="ProjectId" class="form-control" required>
                    <option value="">پروژه را انتخاب کنید</option>
                </select>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">ثبت</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-container {
        width: 60%;
        margin: 0 auto;
        padding: 30px;
        background-color: #f4f7fa;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        background: rgba(255, 255, 255, 0.7);
    }

    h2 {
        color: #1E3A8A;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #6c757d;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        transition: border-color 0.3s ease;
        color: #1E3A8A;
    }

        .form-control:focus {
            border-color: #1E3A8A;
            background-color: rgba(255, 255, 255, 1);
        }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #3f51b5;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #303f9f;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-center {
        text-align: center;
    }

    .form-control:hover {
        border-color: #1E3A8A;
    }
</style>

<script>
    $(document).ready(function () {
        $('#CategoryCostId').change(function () {
            var categoryId = $(this).val();
            if (categoryId) {
                $.ajax({
                    url: '/Criticism/GetSubcategories',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        $('#SubcategoryCostId').empty();
                        $('#SubcategoryCostId').append('<option value="">زیر دسته را انتخاب کنید</option>');
                        $.each(data, function (index, item) {
                            $('#SubcategoryCostId').append('<option value="' + item.id + '">' + item.name + '</option>');
                        });
                    }
                });
            } else {
                $('#SubcategoryCostId').empty().append('<option value="">زیر دسته را انتخاب کنید</option>');
            }
        });
    });
</script>
