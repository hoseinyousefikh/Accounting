@model AccountingMVC.Models.OptionsViewModel

@{
    ViewData["Title"] = "انتخاب دسته‌بندی";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب دسته‌بندی</h2>

    <div class="row justify-content-center">
        <div class="col-12">
            <!-- ردیف اول (4 کارت) -->
            <div class="row mb-4">
                <!-- درآمد ها -->
                <div class="col-md-3 mb-3">
                    <div class="card shadow-lg h-100" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px);">
                        <div class="card-header bg-transparent border-0">
                            <div class="dropdown-header" data-bs-toggle="collapse" data-bs-target="#collapseIncome" aria-expanded="false" style="cursor: pointer;">
                                درآمد ها
                            </div>
                        </div>
                        <div class="collapse" id="collapseIncome">
                            <div class="card-body p-0">
                                @if (Model.SubCategoryIncomeOptions != null && Model.SubCategoryIncomeOptions.Any())
                                {
                                    <ul class="list-group" style="max-height: 200px; overflow-y: auto;">
                                        @foreach (var item in Model.SubCategoryIncomeOptions)
                                        {
                                            <li class="list-group-item border-0">
                                                <a class="dropdown-item" href="@Url.Action("Create", "Criticism", new { FromAccountSubId = item.Id, FromAccountName = item.Name, Titr = 1 })">
                                                    @item.Name
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-center text-muted p-3">هیچ گزینه‌ای موجود نیست</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

