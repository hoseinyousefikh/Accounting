@model AccountingMVC.Models.BudgetingViewModel

@{
    ViewData["Title"] = "حذف بودجه";
}

<h2 class="text-center">آیا مطمئن هستید که می‌خواهید این بودجه را حذف کنید؟</h2>

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 500px;">
        <h3 class="text-center">حذف بودجه</h3>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Xxpenses">نوع هزینه</label>
                <input asp-for="Xxpenses" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="MinAmount">حداقل مقدار</label>
                <input asp-for="MinAmount" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="MaxAmount">حداکثر مقدار</label>
                <input asp-for="MaxAmount" class="form-control" disabled />
            </div>

            <div class="form-group">
                <label asp-for="FDate">تاریخ شروع</label>
                <input asp-for="FDate" class="form-control" type="date" disabled />
            </div>

            <div class="form-group">
                <label asp-for="TDate">تاریخ پایان</label>
                <input asp-for="TDate" class="form-control" type="date" disabled />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">حذف</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">بازگشت</a>
            </div>
        </form>
    </div>
</div>
