@model AccountingMVC.Models.CheckViewModel

@{
    ViewData["Title"] = "زیر دسته‌ها";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب زیر دسته</h2>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                @foreach (var subcategory in Model.SubcategoryIncomes)
                {
                    <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                        <div class="card shadow-lg h-100" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px);">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h6 class="card-title text-center mb-2">@subcategory.Name</h6>
                                <div class="text-center mt-auto">
                                    <a href="@Url.Action("CreateCheck", "CheckIncome", new { subcategoryId = subcategory.Id, subcategoryName = subcategory.Name, categoryId = Model.CategoryIncomeId, categoryName = Model.CategoryIncomeName })"
                                       class="btn btn-info btn-sm py-1 px-2">
                                        انتخاب
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>