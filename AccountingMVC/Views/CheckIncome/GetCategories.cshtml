@model AccountingMVC.Models.CheckViewModel

@{
    ViewData["Title"] = "دسته‌بندی‌ها";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب دسته‌بندی</h2>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                @foreach (var category in Model.CategoryIncomes)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                        <div class="card shadow-lg h-100" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px);">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title text-center mb-3">@category.Name</h5>
                                <div class="text-center mt-auto">
                                    <a href="@Url.Action("GetSubcategories", "CheckIncome", new { categoryId = category.Id, categoryName = category.Name })"
                                       class="btn btn-info btn-sm">
                                        انتخاب زیر دسته
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>