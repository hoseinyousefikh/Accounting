@model AccountingMVC.Models.CriticismViewModel

@{
    ViewData["Title"] = "زیر دسته‌ها";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب زیر دسته</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px);">
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var subcategory in Model.SubcategoryCosts)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@subcategory.Name</span>

                                <a href="@Url.Action("CreateCheck", "Check", new { subcategoryId = subcategory.Id, subcategoryName = subcategory.Name, categoryId = Model.CategoryCostId, categoryName = Model.CategoryCostName })" class="btn btn-info btn-sm">
                                    انتخاب
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
