@model AccountingMVC.Models.OptionsViewModel

@{
    ViewData["Title"] = "انتخاب دسته‌بندی";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب دسته‌بندی</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px);">
                <div class="card-body">

                    <!-- درآمد ها -->
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div class="dropdown" style="cursor: pointer;">
                                <div class="dropdown-header" data-bs-toggle="collapse" data-bs-target="#collapseIncome" aria-expanded="false" aria-controls="collapseIncome" id="category-1">
                                    درآمد ها
                                </div>

                                <div class="collapse" id="collapseIncome">
                                    @if (Model.SubCategoryIncomeOptions != null && Model.SubCategoryIncomeOptions.Any())
                                    {
                                        <ul class="list-group">
                                            @foreach (var item in Model.SubCategoryIncomeOptions)
                                            {
                                                <li class="list-group-item">
                                                    <a class="dropdown-item" href="@Url.Action("Create", "CriticismIncome", new { FromAccountSubId = item.Id, FromAccountName = item.Name, Titr = 1 })">
                                                        @item.Name
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-center text-muted">هیچ گزینه‌ای موجود نیست</p>
                                    }
                                </div>
                            </div>
                        </li>
                    </ul>

