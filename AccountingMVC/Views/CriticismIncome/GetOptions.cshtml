                                        @foreach (var item in Model.SubCategoryCostOptions)
                                        {
                                            <li class="list-group-item border-0">
                                                <a class="dropdown-item d-block py-2" href="@Url.Action("Create", "CriticismIncome", new { FromAccountSubId = item.Id, FromAccountName = item.Name, Titr = 1 })">
                                                    @item.Name
