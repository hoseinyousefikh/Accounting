@model AccountingMVC.Models.CheckViewModel

@{
    ViewData["Title"] = "زیر دسته‌ها";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب زیر دسته</h2>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row g-4">
                @foreach (var subcategory in Model.SubcategoryIncomes)
                {
                    <div class="col-xxl-2 col-xl-3 col-lg-4 col-md-6 col-sm-6">
                        <div class="card shadow-lg h-100" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px); border: 1px solid rgba(0, 123, 255, 0.2);">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="text-center">
                                    <i class="bi bi-folder2-open fs-3 text-info mb-3"></i>
                                    <h6 class="card-title fw-bold">@subcategory.Name</h6>
                                </div>
                                <div class="text-center mt-3">
                                    <a href="@Url.Action("Create", "CriticismIncome", new { subcategoryId = subcategory.Id, subcategoryName = subcategory.Name, categoryId = Model.CategoryIncomeId, categoryName = Model.CategoryIncomeName })"
                                       class="btn btn-info btn-sm w-100 py-2">
                                        <i class="bi bi-check-circle me-2"></i>
                                        انتخاب
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>