@model AccountingMVC.Models.CheckViewModel

@{
    ViewData["Title"] = "دسته‌بندی‌ها";
}

<div class="container my-4">
    <h2 class="text-center mb-4">انتخاب دسته‌بندی</h2>

    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row g-4">
                @foreach (var category in Model.CategoryIncomes)
                {
                    <div class="col-xxl-3 col-xl-4 col-lg-6 col-md-6 col-sm-12">
                        <div class="card shadow-lg h-100" style="background-color: rgba(0, 123, 255, 0.1); border-radius: 10px; backdrop-filter: blur(10px); border: 1px solid rgba(0, 123, 255, 0.2);">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="text-center">
                                    <i class="bi bi-folder fs-1 text-primary mb-3"></i>
                                    <h5 class="card-title fw-bold">@category.Name</h5>
                                </div>
                                <div class="text-center mt-4">
                                    <a href="@Url.Action("GetSubcategories", "CriticismIncome", new { categoryId = category.Id, categoryName = category.Name })"
                                       class="btn btn-info btn-sm w-75 py-2">
                                        <i class="bi bi-arrow-left-circle me-2"></i>
                                        انتخاب زیر دسته
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>