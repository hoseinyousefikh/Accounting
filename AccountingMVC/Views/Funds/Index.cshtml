@model List<AccountingMVC.Models.FundsViewModel>

@{
    ViewData["Title"] = "لیست صندوق‌ها";
}

<div class="container">
    <div class="glass-box">
        <h2 class="text-center">لیست صندوق‌ها</h2>

        @if (Model != null && Model.Count > 0)
        {
            <div class="scroll-box">
                <table class="table table-hover text-white mb-0">
                    <thead>
                        <tr>
                            <th>نام صندوق</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fund in Model)
                        {
                            <tr>
                                <td>@fund.Name</td>
                                <td>@(fund.IsPublic ? "عمومی" : "خصوصی")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@fund.Id" class="btn btn-sm btn-warning">ویرایش</a>

                                    <form asp-action="Delete" asp-route-id="@fund.Id" method="post" style="display:inline;" onsubmit="return confirm('آیا مطمئن هستید که می‌خواهید حذف کنید؟');">
                                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">هیچ صندوقی برای نمایش وجود ندارد.</div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Create" class="btn btn-success btn-lg rounded-circle shadow"
           style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; font-size: 30px;">
            +
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to right, #3b82f6, #1e40af);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-box {
        width: 70%;
        margin: 50px auto;
        padding: 30px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        color: #fff;
    }

    h2 {
        text-align: center;
        color: #f0f8ff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .scroll-box {
        max-height: 300px; /* ارتفاع حدودا معادل 5 ردیف */
        overflow-y: auto;
        border-radius: 10px;
    }

    table {
        width: 100%;
        margin-bottom: 0;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        margin: 2px;
    }
</style>
