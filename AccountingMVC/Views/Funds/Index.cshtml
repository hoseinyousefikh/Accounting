@model List<AccountingMVC.Models.FundsViewModel>

@{
    ViewData["Title"] = "لیست صندوق‌ها";
}

<h2 class="text-center">لیست صندوق‌ها</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <ul class="list-group">
                @foreach (var fund in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @fund.Name
                        <span class="badge @(fund.IsPublic ? "badge-success" : "badge-secondary")">
                            @(fund.IsPublic ? "عمومی" : "خصوصی")
                        </span>
                    </li>
                }
                <li class="list-group-item text-center">
                    <a asp-action="Create" class="btn btn-success btn-lg rounded-circle shadow"
                       style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 24px;">
                        +
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
