@model LoginViewModel
@{
    Layout = null;
}

@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

<style>
    body {
        background: linear-gradient(135deg, #3f51b5, #1E3A8A);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: 'Tahoma', sans-serif;
    }

    .auth-container {
        width: 35%;
        padding: 30px;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        text-align: center;
        direction: rtl;
        color: white;
    }

    h2 {
        color: white;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: right;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.2);
        color: white;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #ffffff;
            box-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
            outline: none;
            background: rgba(255, 255, 255, 0.3);
        }

    .btn {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #1E3A8A;
        color: white;
        transition: background 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0d2a6b;
        }

    .btn-link {
        display: block;
        margin-top: 10px;
        color: white;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 12px;
        color: #ffeb3b;
    }
</style>

<div class="auth-container">
    <h2>ورود به حساب کاربری</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username">نام کاربری</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">رمز عبور</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">ورود</button>
        <a asp-action="Register" class="btn btn-link">حساب ندارید؟ ثبت‌نام کنید</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
